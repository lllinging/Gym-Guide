<% layout('layouts/boilerplate')%>
<link rel="stylesheet" href="/stylesheets/edit.css"> 
    <div class="row">
        <h1 class="text-center">Edit Gym</h1>
        <div class="col-6 offset-3">
            <form action="/gyms/<%= gym._id%>?_method=PUT" method="POST" novalidate class="validated-form"
                enctype=multipart/form-data>
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="gym[title]" value="<%= gym.title %>"
                        required>
                    <div class="valid-feedback">
                        looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <select class="form-select" name="gym[category]" id="category" aria-label="category">
                        <option selected>Open this select menu</option>
                        <option value="Tent"> General </option>
                        <option value="Wild/free">Swimming</option>
                        <option value="Hammock">Yoga</option>
                        <option value="Bike">Tennis</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="gym[location]"
                        value="<%= gym.location %>" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Gym Price</label>
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="price">$</span>
                        <input type="text" class="form-control" placeholder="0" aria-label="price"
                            aria-describedby="price-label" name="gym[price]" value="<%= gym.price %>" required>
                    </div>

                </div>

                <div class="mb-3">
                    <label class="form-label" for="features">features</label>
                    <textarea class="form-control" type="text" id="features" name="gym[features]"
                        required><%= gym.features%></textarea>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" name="gym[description]"
                        required><%= gym.description%></textarea>
                </div>

                <div class="mb-3">
                    <div class="input-group mb-3">
                        <input type="file" class="form-control" plcaeholder="choose images..." id="image" name="image"
                            multiple>
                        <label class="input-group-text" for="image">Upload</label>
                    </div>
                </div>
                <div class="mb-3">
                    <% gym.images.forEach(function(image, i){ %>
                        <img src="<%=image.thumbnail %>" class="img-thumbnail" alt="<%= gym.title %>">
                        <div class="form-check-inline">
                            <input type="checkbox" id="image-<%= i%>" name="deleteImages[]"
                                value="<%= image.filename %>">
                        </div>
                        <label for="image-<%= i%>">Delete?</label>
                        <% }) %>
                </div>

                <div class="mb-3 d-flex justify-content-around">
                    <button class="btn btn-edit">Update Gym</button>
                    <button class="btn btn-cancel">
                        <a href="/gyms" class="btn">Cancel</a>
                    </button>
                </div>
            </form>

        </div>
    </div>