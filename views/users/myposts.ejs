<% layout('layouts/boilerplate')%>
<div class="container mt-5">
    <h1 class="mb-4">My Posts</h1>
    <div class="row">
        <div class="main__content col-md-10 container">
            <div class="row row-cols-1 row-cols-md-3 g-3">
                <% if (gyms.length > 0) { %>
                    <% for (let gym of gyms) { %>          
                        <div class="col">
                            <div class="card mb-3">
                                <div class="card__image">
                                    <% if (gym.images && gym.images.length) { %>
                                        <img crossorigin="anonymous" src="<%= gym.images[0].url %>" class="img-fluid" alt="<%= gym.title %>">
                                    <% } else { %>
                                        <img crossorigin="anonymous" src="https://res.cloudinary.com/dwkdvav2l/image/upload/v1716346418/YelpCamp/pbeme0n663dxkr9uxryk.png" class="img-fluid" alt="<%= gym.title %>">  
                                    <% } %>
                                </div>
                                <div class="card-body">
                                    <h5 class="card-title"><%= gym.title %></h5>
                                    <p class="card-text">Location: <%= gym.location %></p>
                                    <p class="card-text">Features: <%= gym.features %></p>
                                    <a href="/gyms/<%= gym._id %>" class="btn btn-primary">View More</a>
                                </div>
                            </div>
                        </div>
                    <% } %>
                <% } else { %>
                    <p>You have not posted any gyms yet!</p>
                <% } %>
            </div>
        </div>
    </div>
</div>
